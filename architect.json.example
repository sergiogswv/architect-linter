{
  "max_lines_per_function": 40,
  "architecture_pattern": "MVC",
  "forbidden_imports": [
    {
      "from": "src/**/.controller.ts",
      "to": "src/**/.repository.ts"
    },
    {
      "from": "src/**/.service.ts",
      "to": "src/**/.controller.ts"
    },
    {
      "from": "src/components/**/*.tsx",
      "to": "src/repositories/**/*.ts"
    }
  ]
}
